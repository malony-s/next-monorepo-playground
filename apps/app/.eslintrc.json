{
  "extends": ["next/core-web-vitals"],
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": { 
      "jsx": true
    },
    "project": ["**/tsconfig.json"],
    "tsconfigRootDir": "."
  },
  "ignorePatterns": ["next.config.js"],
  "settings": {
    "next": {
      "rootDir": "apps/app/"
    }
  }
}
